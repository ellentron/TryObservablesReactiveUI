<reactiveui:ReactiveWindow
    x:Class="TryObservablesReactiveUI.MainWindow"
    x:TypeArguments="tryObservablesReactiveUI:MyViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tryObservablesReactiveUI="clr-namespace:TryObservablesReactiveUI"
    xmlns:reactiveui="http://reactiveui.net"
    mc:Ignorable="d"
    Title="Try Observables ReactiveUI" Height="450" Width="800">
    
    <StackPanel>
        <StackPanel>
            <TextBox x:Name="TheValueBox" />
            
            <TextBlock x:Name="TheTextBlock" />
            
            <Button x:Name="TheTextButton" Content="Click Me !!!" MinHeight="20" Margin="0 0 20 0"/>

            <TextBlock x:Name="FirstNameTextBox" />

            <TextBox x:Name="NameTextBox" />

            <TextBlock x:Name="NameTextBlock" />
        </StackPanel>
    </StackPanel>
</reactiveui:ReactiveWindow>
